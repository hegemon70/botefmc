<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgActividadlyhac"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombreaclyhac"
        android:layout_toRightOf="@id/imgActividadlyhac"
        android:layout_alignTop="@id/imgActividadlyhac"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPagadorlyhac"
        android:layout_toRightOf="@id/imgActividadlyhac"
        android:layout_alignBottom="@id/imgActividadlyhac"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPreciolyhac"
        android:layout_toRightOf="@id/txtPagadorlyhac"
        android:layout_alignBottom="@id/imgActividadlyhac"
        />
</RelativeLayout>